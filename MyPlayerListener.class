package me.JCW313.AsmalurGhost;

import org.bukkit.ChatColor;
import org.bukkit.entity.Player;
import org.bukkit.event.EventHandler;
import org.bukkit.event.Listener;
import org.bukkit.event.player.PlayerJoinEvent;
import org.bukkit.potion.PotionEffect;
import org.bukkit.potion.PotionEffectType;

public class MyPlayerListener implements Listener {
	public static AsmalurGhost plugin;
	
	@EventHandler
    public void PlayerJoin(PlayerJoinEvent event) {
    	Player p = event.getPlayer();
		if(p.hasPermission("access.ghost")){
			p.addPotionEffect(new PotionEffect(PotionEffectType.INVISIBILITY, Integer.MAX_VALUE, 2));
			p.sendMessage(ChatColor.GRAY + "Welcome to Asmalur! You are a Ghost, which means you are invisible to everybody and cannot interact with the world. You can still fly around and watch people roleplay, so please enjoy!");
		} else{
			p.sendMessage(ChatColor.GREEN + "Welcome back to Asmalur!");
		}
	}
}
	
